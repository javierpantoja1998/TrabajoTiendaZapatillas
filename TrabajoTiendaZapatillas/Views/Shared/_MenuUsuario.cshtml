@if (Context.User.Identity.IsAuthenticated == false){
    <li class="nav-item">
        <a class="nav-link text-dark" 
            asp-controller="Managed" 
            asp-action="PerfilUsuario">
            Amigo no identificado
        </a>
    </li>
}else{
    <li class="nav-item">
        <a class="nav-link text-dark"
            asp-controller="Managed"
            asp-action="LogOut">
            Log Out <span style="color:salmon">
                @Context.User.Identity.Name
            </span>
        </a>
    </li>
}